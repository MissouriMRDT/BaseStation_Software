<UserControl x:Class="RED.Views.ControlCenter.ConsoleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controlCenter="clr-namespace:RED.ViewModels.ControlCenter"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance Type=controlCenter:ConsoleViewModel, IsDesignTimeCreatable=True}">
    <DockPanel>
        <TextBlock Text="Message Center" DockPanel.Dock="Top" Margin="0 0 0 3"/>
        <TextBox Text="{Binding ConsoleText}" IsReadOnly = "True" IsHitTestVisible="True" TextWrapping="Wrap" Name="ConsoleTextBox"
                 VerticalScrollBarVisibility="Auto" BorderThickness="1" TextChanged="ConsoleText_Changed"/>
    </DockPanel>
</UserControl>
